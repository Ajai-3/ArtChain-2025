generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  name           String
  username       String   @unique
  email          String   @unique
  phone          String
  password       String
  role           Role @default(user)
  plan           Plan @default(free)
  status         Status @default(active)
  isVerified     Boolean  @default(false)
  profileImage   String?
  bannerImage    String?
  backgroundImage String?
  bio            String?
  country         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  supporters     Supporter[] @relation("supporterRelation")
  supporting     Supporter[] @relation("supportedRelation")
}

model Supporter {
  id           String   @id @default(cuid())
  supporterId  String
  targetUserId String
  createdAt    DateTime @default(now())

  supporter    User     @relation("supporterRelation", fields: [supporterId], references: [id])
  targetUser   User     @relation("supportedRelation", fields: [targetUserId], references: [id])

  @@unique([supporterId, targetUserId])
}


enum Role {
  user
  artist
  admin
}

enum Plan {
  free
  pro
  pro_plus
}

enum Status {
  active
  banned
  suspended
  deleted
}